<% layout('layouts/boilerplate') %>

<div>
    <div id='cluster-map'></div>
</div>

    <h1>All Campgrounds</h1>

    <% for(let camp of camps){ %>

        <div class="card my-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(camp.images[0]) { %> 
                    <img class="img-fluid" src="<%=camp.images[0].url%>" alt="">
                    <% } else { %>
                        <img class="img-fluid" src="https://res.cloudinary.com/yelpcamp99/image/upload/v1616659182/YelpCamp/eisao9svs4w9ssbgjvcc.jpg">
                    <% } %> 
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=camp.title%></h5>
                        <p class="card-text"><%=camp.desc%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=camp.location%></small>    
                        </p>
                        <a href="/campgrounds/<%=camp.id%>" class="btn btn-primary">More</a>
                    </div>
                </div>  
            </div>
        </div>
    <% } %>


    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const camps = {features: <%- JSON.stringify(camps) %>};
    </script>
    <script src="/javascripts/clusterMap.js"></script>